        <li class="nav-item">
          <a class="nav-link" href="">Hello <%= currentUser.username %> </a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/logout"><span class="fas fa-sign-in-alt"></span> Log out</a>
        </li>
        <% } %>
      </ul>
    </nav>
  </div>
</div>
<div class="container">
  <% if(error && error.length > 0) {%>
  <div class="alert">
    <span class="closebtn closebtn-error" onclick="this.parentElement.style.display='none';">&times;</span>
    <%=error%>
  </div>
  <% } %>
  <% if(success && success.length > 0) {%>
  <div class="alert alert-success" role="alert">
    <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
    <%=success%>
  </div>
  <% } %>
