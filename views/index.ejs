<script type="text/javascript">


    function addResults(result) {
        $("#results").replaceWith('<div id="results"></div>')
        $("#results").append(`<h4>Name: ${result.name} </h4> <p>Email Address: ${result.username} </p>`)
    };

    function getResults(phrase) {
        phrase = phrase.phrase;
        console.log(`http://localhost:3000/messages/${phrase}`);
        $.get(`http://localhost:3000/messages/${phrase}`, (data) => {
            console.log(data[0].name);
            data.forEach(addResults)
        })
    };



    $(() => {
        $("#send").click(() => {

            console.log($("#phrase").val());
            getResults({
                phrase: $("#phrase").val()
            });
        })
    })

